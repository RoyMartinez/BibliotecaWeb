@model Biblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Crear Prestamo";
}

<h1>Crear Prestamo</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estudiante" class="control-label"></label>
                <select asp-for="Estudiante" class ="form-control" asp-items="ViewBag.Estudiante"></select>
            </div>
            <div class="form-group">
                <label asp-for="Libro" class="control-label"></label>
                <select asp-for="Libro" class ="form-control" asp-items="ViewBag.Libro"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
